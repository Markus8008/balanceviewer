<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="Mark" id="1">
        <createTable tableName="clients">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="accounts">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_client" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="nrb" type="VARCHAR(26)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="accounts" baseColumnNames="id_client"
                                 constraintName="account_clients_fk"
                                 referencedTableName="clients" referencedColumnNames="id"/>

        <createTable tableName="balances">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_account" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="CURRENCY">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="balances" baseColumnNames="id_account"
                                 constraintName="balances_account_fk"
                                 referencedTableName="accounts" referencedColumnNames="id"/>

        <createTable tableName="transactions">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_account" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="CURRENCY">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="desc" type="VARCHAR(255)"/>

        </createTable>
        <addForeignKeyConstraint baseTableName="transactions" baseColumnNames="id_account"
                                 constraintName="transactions_accounts_fk"
                                 referencedTableName="accounts" referencedColumnNames="id"/>
        <rollback>
            <dropTable tableName="transactions"/>
            <dropTable tableName="balances"/>
            <dropTable tableName="accounts"/>
            <dropTable tableName="clients"/>
        </rollback>
    </changeSet>
</databaseChangeLog>